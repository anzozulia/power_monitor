# Power Outage Monitor - Production Environment
# Copy to .env.docker_production and fill in real values

# Django Settings
DJANGO_SECRET_KEY=your-strong-secret-key-here-generate-one
DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# PostgreSQL Database
POSTGRES_DB=power_monitor
POSTGRES_USER=power_monitor
POSTGRES_PASSWORD=your-strong-database-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Admin Panel Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-strong-admin-password

# Telegram (required for alerting)
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_CHAT_ID=your-group-chat-id

# Timezone
TZ=Europe/Kyiv
